 #include <iostream>
using namespace std;
class student
{
int roll;
string name;
float avg;

public:
void take()
{
fflush(stdin);
cout << "Enter name of student: ";
getline(cin, name);
cout << "Enter roll of student: ";
cin >> roll;
cout << "Enter avg marks: ";
cin >> avg;
}
void display()
{
cout << "Name= " << name << "\nRoll: " << roll << "\nMarks= " << avg;
}
};
int main()
{
student a[5];
for (int i = 0; i < 5; i++)
{
cout << "Enter the record of " << i + 1 << " student\n";
a[i].take();
}
for (int i = 0; i < 5; i++)
{
cout << "\n-----------student " << i + 1 << "-----------\n";
a[i].display();
}
}



